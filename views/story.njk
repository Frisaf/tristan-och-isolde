{% extends "layout.njk" %}

{% block content %}

<main>
    <h1>{{ title }}</h1>
    <p><em>{{ message }}</em></p>
    
    <ol class="choicesList">
        {% for choice in choices %}
            {% if not requirement %}
                <li><button class="choiceBtn" onclick="location.href='/story/{{ choice.target }}'">{{ choice.text }}</button></li>
            {% endif %}
        {% else %}
            <p>You reached the end! Or at least one of them...</p>
        {% endfor %}
    </ol>
</main>

{% endblock %}