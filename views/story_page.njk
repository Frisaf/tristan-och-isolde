{% extends "layout.njk" %}

{% block content %}

<main>
    <h1>{{ title }}</h1>
    <p><em>{{ message }}</em></p>
    
    <ol>
        {% for choice in choices %}
            <li><a href="/story_page/{{ choice.target }}">{{ choice.text }}</a></li>
        {% else %}
            <p>You reached the end!</p>
        {% endfor %}
    </ol>
</main>

{% endblock %}